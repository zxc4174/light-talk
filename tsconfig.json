{
    "compilerOptions": {
        "noEmit": false,
        "baseUrl": ".",
        "allowJs": true,
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [],
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "typings/*"
    ]
}